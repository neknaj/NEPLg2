{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "strict": true,
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist_ts",
        "rootDir": "./src",
        "baseUrl": "./src",
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist_ts",
        "**/*.spec.ts"
    ]
}